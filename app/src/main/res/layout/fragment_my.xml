<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fixed_height"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/app_bar_title"
                android:text="@string/app_name"
                android:textColor="@color/textColorPrimary"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:text="请登录"
                android:textColor="@color/textColorPrimary"
                android:visibility="visible"
                style="@style/Widget.AppCompat.ActionButton"
                />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/ic_bigger_width"
        android:layout_height="@dimen/ic_bigger_height"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="@dimen/layout_margin"
        />

    <me.zoro.peachgardenmall.view.RichText
        android:id="@+id/edit_user_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑资料"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_edit"
        android:drawablePadding="4dp"
        android:background="?android:attr/selectableItemBackground"
        app:drawableHeight="12dp"
        app:drawableWidth="12dp"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_gravity="fill"
        >

        <me.zoro.peachgardenmall.view.RichText
            android:id="@+id/my_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的购物车"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_shopping_cart"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="32dp"
            app:drawableWidth="32dp"
            />

        <me.zoro.peachgardenmall.view.RichText
            android:id="@+id/my_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_order"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="32dp"
            app:drawableWidth="32dp"
            />

        <me.zoro.peachgardenmall.view.RichText
            android:id="@+id/my_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_collection"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="32dp"
            app:drawableWidth="32dp"
            />

        <me.zoro.peachgardenmall.view.RichText
            android:id="@+id/vip_central"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会员中心"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_vip"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="32dp"
            app:drawableWidth="32dp"
            />

        <me.zoro.peachgardenmall.view.RichText
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_setting"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="32dp"
            app:drawableWidth="32dp"
            />

        <me.zoro.peachgardenmall.view.RichText
            android:id="@+id/common_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_my_common_question"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="40dp"
            app:drawableWidth="32dp"
            />

        <!--<me.zoro.peachgardenmall.view.RichText
            android:id="@+id/exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分兑换"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center"
            android:padding="@dimen/layout_padding"
            android:drawableTop="@drawable/ic_mall_black"
            android:drawablePadding="4dp"
            android:background="?android:attr/selectableItemBackground"
            app:drawableHeight="32dp"
            app:drawableWidth="32dp"
            />-->

    </GridLayout>
</LinearLayout>