<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        >

        <View
            android:id="@+id/v_divide"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/list_divider"
            />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_padding"
            android:paddingTop="@dimen/layout_padding"
            android:text="50"
            android:layout_below="@id/v_divide"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/tv_money_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/layout_padding"
            android:text="元"
            android:layout_below="@id/v_divide"
            android:layout_toRightOf="@id/tv_money"
            style="@style/TextAppearance.AppCompat.Title"
            />

        <TextView
            android:id="@+id/tv_full_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_money"
            android:layout_marginTop="4dp"
            android:text="满500元可用"
            android:paddingLeft="@dimen/layout_padding"
            />


        <TextView
            android:id="@+id/tv_suit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_padding"
            android:text="适用于保健品、生鲜果蔬"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:id="@+id/v_divide2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/list_divider"
            android:layout_below="@id/tv_full_cut"
            android:layout_margin="@dimen/layout_margin"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
